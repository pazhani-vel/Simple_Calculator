        <script>
            const data=document.getElementById("input");
            function docal(char)
            {
                data.value+=char;
            }
            function result()
            {
                try{
                data.value=eval(data.value);
                }
                catch
                {
                    data.value="Math Error !";
                }

            }
            function c()
            {
                data.value='';
            }
        </script>
